{% block body %}
  <!doctype html>
  <html class="no-js" lang="">
  <head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <title>Githubed Dashboard</title>
      <meta name="description" content="">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

      <!-- Place favicon.ico and apple-touch-icon(s) in the root directory -->
      <link rel="shortcut icon" href="images/favicon.ico">

      <!-- stylesheets -->
      <link rel="stylesheet" type="text/css" href="stylesheets/theme.css" />
      <link rel="stylesheet" type="text/css" href="stylesheets/style.css" />

      <!-- javascript -->
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
      <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDlYNNs7VBO71qiKFMNiD0R9sd8hOt0wD4"></script>
      <script src="javascripts/theme.min.js"></script>
  </head>
  <body>
  <!--[if lt IE 8]>
  <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
  <![endif]-->

  <nav class="navbar navbar-expand-lg navbar-dark bg-transparent" role="navigation">
      <div class="container no-override">
          <a class="navbar-brand" href="/">
              <!--
                          <img src="images/logo-alt-w.png" class="d-none d-lg-inline mr-2 w-25" />
              -->
              Githubed Dashboard
          </a>
          <button class="navbar-toggler" data-toggle="collapse" data-target="#navbar-collapse">
              <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse justify-content-end" id="navbar-collapse">
              <ul class="navbar-nav">
                  {% if not user %}
                  <li class="nav-item active dropdown">
                      <a href="/register" class="nav-link dropdown-toggle">
                          Register
                      </a>

                  </li>
                  <li class="nav-item dropdown">
                      <a href="/login" class="nav-link dropdown-toggle">
                          Login
                      </a>
                  </li>
                  {% else %}
                  <li class="nav-item dropdown">
                      <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                          {{user}}
                          <i class="ion-chevron-down"></i>
                      </a>
                      <div class="dropdown-menu" role="menu">
                          <a class="dropdown-item" href="dashboard">Dashboard</a>
                          <a class="dropdown-item" href="profil">Profil</a>
                          <a class="dropdown-item" href="logout" style="color: #9b2625;">Logout</a>
                      </div>
                  </li>
                  {% endif %}
                  </ul>
          </div>
      </div>
  </nav>

  <div class="business-hero">
      <div class="container">
          <h2 class="customFadeInUp">
              Manage smarter than ever before
          </h2>
          <p>
              Githubed Dashboard is an online plateform that allow you to manage your own Dashboard.
          </p>
         <!-- <div class="actions customFadeInUp">
              <a href="/register" class="btn-pill btn-pill-primary btn-pill-lg">Register Free</a>
          </div>-->
      </div>
  </div>

  <div class="spacial-features" data-scroll>
      <section class="container">
          <div class="row">
              <div class="col-12">
                  <div class="header">
                      <h2>Complete control over your searches</h2>
                      <p>
                          Your Dashboard
                      </p>
                  </div>
              </div>
          </div>
      </section>
  </div>

  <footer class="footer">
      <div class="container">
          <div class="bottom">
              <ul>
                  <li><a href="#">Privacy</a></li>
                  <li><a href="#">Legal</a></li>
                  <li><a href="#">Language</a></li>
              </ul>
          </div>
      </div>
  </footer>

  <script type="text/javascript">
      $(function () {
          var trigger = new ScrollTrigger({
              toggle: {
                  visible: 'customFadeInUp'
              },
              offset: {
                  y: 150
              },
              once: true
          });
      });
  </script>
  </body>
  </html>

